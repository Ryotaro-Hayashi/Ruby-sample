<% provide(:title, @user.name) %>
<div class="row">
  <!-- サイドバーを作成 -->
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <!-- ユーザー表示ビューに名前とGravatarを表示する -->
        <!-- gravetar_for はヘルパーメソッド -->
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- マイクロポストが存在するならば -->
    <% if @user.microposts.any? %>
      <!-- マイクロポストの数を表示 -->
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
        <!-- ページネーション機能 -->
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
